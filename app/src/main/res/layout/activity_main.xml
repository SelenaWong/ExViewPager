<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
     <FrameLayout
        android:id="@+id/fl_product"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="12dp">
    <com.evangeline.exviewpager.widget.LoopViewPager
        android:id="@+id/pager_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </FrameLayout>
    <ProgressBar
        android:id="@+id/proBar_product"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/page_progressbar" />
       <RelativeLayout
          android:id="@+id/rl_product_switchbtn"
	      android:layout_width="fill_parent"
	      android:layout_height="42dip"
	      android:layout_marginTop="11dip"
	      android:layout_marginBottom="11dip"
	      android:background="@color/background"
	      >
        <ImageView
          android:id="@+id/imv_product_previousPage"
          android:layout_width="120dp"
          android:layout_height="100dp"
          android:paddingLeft="10dp"
          android:paddingRight="40dp"
          android:scaleType="centerInside"
          android:layout_alignParentStart="true"
          android:src="@drawable/home_btn_topreview"
          android:contentDescription="@string/app_name"
          />
       <TextView
          android:id="@+id/tv_product_currentPage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:textSize="@dimen/txtSize_large"
          android:textColor="@color/text_darkgray"
          android:singleLine="true"/>
       <ImageView
          android:id="@+id/imv_product_nextPage"
          android:layout_width="120dp"
          android:layout_height="100dp"
          android:paddingLeft="40dp"
          android:paddingRight="10dp"
          android:scaleType="centerInside"
          android:layout_alignParentEnd="true"
          android:src="@drawable/home_btn_tonext"
          android:contentDescription="@string/app_name"
          />
   </RelativeLayout>
</LinearLayout>
